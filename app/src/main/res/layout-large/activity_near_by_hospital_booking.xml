<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.nearByHospitals.nearByHospitalBooking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/dashboard_image">

        <Spinner
            android:id="@+id/departmentType"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@drawable/department_type"
            android:entries="@array/departmentType"
            android:paddingStart="5dp"
            android:paddingEnd="0dp">

        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/some_description_of_the_department"
            android:layout_marginTop="25dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/colorWhite"
            android:textSize="15sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nearByHospitalBookingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"/>

</LinearLayout>